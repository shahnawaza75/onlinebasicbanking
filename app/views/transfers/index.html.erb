<h1>Transfers</h1>

<% flash.each do |type, message| %>
    <% if :notice %>
    <%= message %>
    <% end %>
  <% end %>
  
</br>

<%= link_to 'Make a tranfser', new_transfer_path, class:'mat' %>

<table class="btn btn-success margin:200px">
<tr>
<th>Transaction Id</th>
<th>Sender</th>
<th>Receiver</th>
<th>Amount</th>
</tr>
<% @transfers.each do |transfer| %>
    <tr> 
       <td> <%= transfer.id %>
       <td> <%= transfer.sender.name %> </td>
       <td> <%= transfer.receiver.name %> </td>
       <td> $ <%= transfer.amount %> </td>
    </tr>
    
<% end %>

</table>
<%= link_to 'Go to Home', root_path %>
